{
  "name": "prisma-cloud-defender",
  "publisher": "ErickMoore",
  "preview": true,
  "private": true,
  "displayName": "Prisma Cloud Serverless Defender (Azure)",
  "description": "Deploy Prisma Cloud Serverless Defender",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.73.0"
  },
  "icon": "images/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.install-defender",
        "title": "Prisma Cloud: Install Serverless Packages"
      },
      {
        "command": "extension.create-environment-variable",
        "title": "Prisma Cloud: Create App Service Variable"
      },
      {
        "command": "extension.get-environment-variable",
        "title": "Prisma Cloud: Get App Service Variable"
      }      
    ],
    "configuration": {
      "title": "Prisma Cloud Serverless Defender (Azure)",
      "properties": {
        "PrismaCloudEnt.identity": {
          "type": "string",
          "default": "",
          "title": "Prisma Cloud Identity",
          "description": "Prisma Cloud Key or User Name",
          "markdownDescription": "Prisma Cloud Identity"
        },
        "PrismaCloudEnt.secret": {
          "type": "string",
          "default": "",
          "description": "Prisma Cloud Secret",
          "markdownDescription": "Prisma Cloud Secret"
        },
        "PrismaCloudEnt.console": {
          "type": "string",
          "default": "",
          "description": "Prisma Cloud Console URL",
          "markdownDescription": "Prisma Cloud Console URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "unzipper": "^0.12.1"
  }
}